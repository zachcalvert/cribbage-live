{
  "name": "cribbage-live",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w @cribbage/server",
    "dev:client": "npm run dev -w @cribbage/client",
    "build": "npm run build -w @cribbage/shared && npm run build -w @cribbage/server && npm run build -w @cribbage/client",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
